<div class="row">
  <div class="col-4 text-center">
    <form>
      <div class="form-group">
        <h3>Add a Burger.</h3>
        <input class="form-control" type="text" id="burger-input" placeholder="Create your Burger"/>
        <button class="btn btn-block btn-success" id="submit-btn">Add Burger</button>
      </div>
    </form>
  </div>
  <div class="col-4">
    <h3>Burger to Devoured</h3>
    <ul class="list-group">
    {{#each burgerList}}
      {{#unless Devoured}}
        <li class="list-group-item">
          {{Burger}} 
          <button data-id="{{id}}" class="mark-complete btn btn-info">C</button>
          <button data-id="{{id}}" class="delete btn btn-danger"> X </button>
        </li>
      {{/unless}}
    {{/each}}
    </ul>
  </div>
  <div class="col-4">
    <h3>Devoured</h3>
    <ul class="list-group">
      {{#each burgerList}}
      {{#if Devoured}}
      <li class="list-group-item">
        {{Burger}}
        <button data-id="{{id}}" class="delete btn btn-danger"> X </button>
      </li>
      {{/if}}
      {{/each}}
    </ul>
  </div>
</div>